<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo3"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:textAlignment="center">


    <Button
        android:id="@+id/btnStart"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="101dp"
        android:background="@android:color/holo_blue_bright"
        android:text="Historical / Forecast" />

    <Button
        android:id="@+id/btnMoreAboutToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="166dp"
        android:text="More about today" />

    <TextView
        android:id="@+id/tvCurrentFL"
        android:layout_width="119dp"
        android:layout_height="97dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="134dp"
        android:text="-25"
        android:textAlignment="center"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp"
        android:text="Feels Like" />

    <TextView
        android:id="@+id/tvCurrenDesc"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="Cloudy"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:text="Current Temperature" />

    <TextView
        android:id="@+id/tvCurrenTemp"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="-15"
        android:textAlignment="center"
        android:textSize="26sp" />

</RelativeLayout>